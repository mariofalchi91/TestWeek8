@model IEnumerable<PiattoViewModel>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Descrizione</th>
            <th scope="col">Tipologia</th>
            <th scope="col">Prezzo</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descrizione</td>
                <td>@item.Tipologia.ToString()</td>
                <td>@item.Prezzo.ToString()</td>

                @*@if (User.IsInRole("Administrator"))
                    {
                    <td>@Html.ActionLink("Edit", "Edit", "Piatti", new { code = item.Id })</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Piatti", new { code = item.Id })</td>
                    }*@
            </tr>
        }
    </tbody>
</table>